pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout du code...'
                checkout([$class: 'GitSCM', 
                         branches: [[name: '*/main']], 
                         userRemoteConfigs: [[url: 'https://github.com/lorddiosan/devopstest.git']]])
            }
        }
        
        stage('Build Maven') {
            steps {
                echo 'Compilation Maven...'
                sh 'mvn --version'
                sh 'mvn clean compile'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Exécution des tests...'
                sh 'mvn test'
            }
        }
        
        stage('Package') {
            steps {
                echo 'Création du JAR...'
                sh 'mvn package -DskipTests'
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline réussie!'
        }
        failure {
            echo '❌ Pipeline échouée!'
        }
    }
}
